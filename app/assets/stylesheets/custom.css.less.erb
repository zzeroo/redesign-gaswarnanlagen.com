@boxgelb: #D2C00A;
@boxrot: #D13E26;
@boxschwarz: #00305E;
@boxaktuell: #7C7C7C;
@boxgruen: #0D440D;
@boxnachrichten: #5D5D5D;


body { 
  padding-top: 40px; 
  padding-bottom: 40px; 
}

.bs-docs-header {
  background-color: #E7001A;
  .row {
    height: 134px;
    background: url("<%= asset_path('header-01.jpg') %>") no-repeat scroll 0px 0px #E7001A;
    a {
      display: block;
      width: 100%;
      height: 100%;
    }
  }
}

.box_homepage {
  margin-top: 1em;
  height: 368px;
  color: #FFF;
  h1, .description {
    padding: 0 .5em .5em .5em;
  }a{
    color: #FFF;
    text-decoration: none;
  }
  .logo {
    width: 100%;
    height: 130px;
    padding: 0;
    margin: 0;
    overflow: hidden;
    img {
      min-width: 100%;
      min-height: 100%;
    }
  }
}
.boxgelb {
  background-color: @boxgelb;
}

.boxrot {
  background-color: @boxrot;
}
.boxschwarz {
  background-color: @boxschwarz;
}

.boxaktuell {
  background-color: @boxaktuell;
}

.boxgruen {
  background-color: @boxgruen;
}

.boxnachrichten {
  background-color: @boxnachrichten;
}

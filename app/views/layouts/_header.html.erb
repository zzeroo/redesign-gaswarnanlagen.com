        <li><%= link_to "Vertrieb", distributors_path %></li>
        <li><%= link_to "Kontakt", contact_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mehr <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Aktuell", news_index_path %></li>
            <li><%= link_to "Produkte", products_path %></li>
            <li><%= link_to "Produkt-Kategorien", categories_path, data: { no_turbolink: true } %></li>
            <% if signed_in? %>
            <li><%= link_to "BDA's", bdas_path, data: { no_turbolink: true } %></li>
            <li><%= link_to "Profil", user_path(current_user) %></li>
            <li><%= link_to "Einstellungen", edit_user_path(current_user) %></li>
            <li><%= link_to "Sign out", signout_path, method: "delete"  %></li>
            <% else %>
            <li><%= link_to "Login", signin_path %></li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>

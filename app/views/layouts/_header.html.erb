<%= nav_bar :fixed => :top, :brand => "RA-GAS GmbH", :responsive => true do %>
    <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_divider %>
        <%= menu_item "Aktuell", news_index_path %>
        <%= menu_item "Firmenprofil", about_path %>
        <%= menu_item "Referenzen", references_path %>
        <%= menu_item "Vertriebspartner", distributors_path %>
        <%= menu_item "Kontakt", contact_path %>
    <% end %>
    <%= menu_group :pull => :right do %>
      <% if signed_in? %>
        <% if current_user.admin? %>
          <%= drop_down "Administration" do %>
            <%= menu_item "Produkte", products_path %>
            <%= menu_item "Produkt Gruppen", product_groups_path %>
          <% end %>
        <% end %>
        <%= drop_down "Account" do %>
            <%= menu_item "Profil", user_path(current_user) %>
            <%= menu_item "Einstellungen", edit_user_path(current_user) %>
            <%= menu_item "Sign out", signout_path, method: "delete"  %>
        <% end %>
      <% else %>
        <%= menu_item "Sign in", signin_path %>
      <% end %>
    <% end %>
<% end %>
<div id="content" class="bs-docs-header">
  <div class="container">
    <div class="row"><%= link_to '', root_path %>
      <div class="span12">
        <!-- TODO: Logo for text based browser -->
      </div>
    </div>
  </div>
</div>

<%= yield :jumbotron %>

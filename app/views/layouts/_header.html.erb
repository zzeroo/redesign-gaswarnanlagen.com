<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "RA-GAS GmbH", root_path, class: "navbar-brand hidden-xs text-hide brand", data: { no_turbolink: true }, title: "Home > RA-GAS GmbH Rauch und Gas Warnanlagen"  %>
      <%= link_to "RA-GAS", root_path, class: "navbar-brand visible-xs text-hide brand-xs", data: { no_turbolink: true }, title: "Home > RA-GAS GmbH Rauch und Gas Warnanlagen"  %>

      <div class="col-xs-8">
      <%= form_tag products_path, style: "border: 0; padding: 0 1em", method: :get, class: "navbar-form pull-left", role: "search" do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Suche" %>
          <div class="input-group-btn">
            <%= submit_tag "Suche", :name => nil, class: "btn btn-default" %>
          </div>
        </div>
      <% end %>
      </div>
    </div>

    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "Aktuell", news_index_path %></li>

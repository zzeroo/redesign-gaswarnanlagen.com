<% provide(:title, 'Anmeldung') %>
<h1>Anmeldung</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "BestÃ¤tigung" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Benutzerzugang erstellen", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>oder mit bestehenden Zugangsdaten einloggen <%= link_to "Sign in", signin_path %></p>
  </div>
</div>


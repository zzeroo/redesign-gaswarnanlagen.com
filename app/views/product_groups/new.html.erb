<% provide(:title, 'Neue Produkt Gruppe anlegen') %>
<h1>Neue Produkt Gruppe anlegen</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@product_group, html: {class: "form-horizontal", role: "form"}) do |f| %>
      <%= render 'fields', f: f %>
      <div><%= f.submit "Produktgruppe erstellen", class: "btn btn-large btn-primary" %></div>
    <% end %>
  </div>
</div>



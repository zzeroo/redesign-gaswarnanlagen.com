<% provide(:title, 'Produkt Gruppen') %>
<h1>Produkt Gruppen</h1>

<div class="row">
  <div class="col-md-8">
    <div class="row">
      <% for product_group in  @product_groups do %>
      <div class="col-md-6">
        <h1><%= link_to( product_group.name, product_group_path(product_group) ) %><i class="icon icon-chevron-down pull-right"></i></h1>
        

        <p><%= image_tag product_group.logo.url, :width => '100px' %></p>
        <%= simple_format product_group.description %>
        <% if current_user && current_user.admin? %>
          <p>
          <%= link_to 'bearbeiten', edit_product_group_path(product_group) %> | 
          <%= link_to 'lÃ¶schen', product_group, method: :delete, data: { confirm: "Bist du sicher?" } %>
        </p>
        <% end %>
      </div>
      <%end %>
    </div>
  </div>
</div>



<div class="row center">
  <% if current_user && current_user.admin? %>
    <%= link_to 'Neue Produkt Gruppe erstellen', new_product_group_path, class: "btn btn-large btn-primary" %>
  <% end %>
</div>

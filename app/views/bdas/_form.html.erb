<%= simple_form_for(@bda) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name %>
  </div>

  <div class="form-group">
    <%= f.input :description %>
  </div>

  <div class="form-group">
    <%= f.input :product_nr_prefix %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'BDA erstellen' %>
  </div>
<% end %>

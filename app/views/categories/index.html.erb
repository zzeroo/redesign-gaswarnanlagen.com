
<% provide(:title, 'Produkt Kategorien') %>
<h1>Produkt Kategorien</h1>

<div class="row">
  <div class="col-md-12">

    <ul>
      <%= render @categories %>
    </ul>

  </div>
</div>



<div class="row center">
  <% if current_user && current_user.admin? %>
    <%= link_to 'Neue Produkt Kategorie erstellen', new_category_path, class: "btn btn-large btn-primary" %>
  <% end %>
</div>

<% provide(:title, 'Produkte') %>
<h1>Produkte</h1>

<div class="row">
  <div class="col-lg-6">
  </div><!-- /.col-lg-6 -->
  <div class="col-lg-3">
    <%= form_tag products_path, method: :get do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], class: "form-control" %>
      <span class="input-group-btn">
      <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
      </span>
    </div><!-- /input-group -->
    <% end %>
  </div><!-- /.col-lg-3 -->
  <div class="col-lg-3">
    <% if current_user && current_user.admin? %>
      <%= link_to "Produkte importieren", new_product_import_path, class: "btn btn-large btn-primary" %>
    <% end %>
  </div><!-- /.col-lg-3 -->
</div><!-- /.row -->


    <% if false # Deaktiviert weil nicht gebraucht %>
    <p>
    Download:
    <%= link_to "CSV", products_path(format: "csv") %> | 
    <%= link_to "Excel", products_path(format: "xls") %>
    </p>
    <% end %>


<div class="row">
  <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
</div>


<div class="row">
  <div class="table-responsive">
    <table class="table table-hover table-hover">
      <tr>
        <th>Art. Nr.</th>
        <th>Kurztext</th>
        <th>Bezeichnung</th>
        <th></th>

      </tr>
      <% for product in  @products do %>
      <tr>
        <td><%= highlight_it product.product_nr, params[:search] %></td>
        <td><%= highlight_it product.short_description, params[:search] %></td>
        <td><%= highlight_it product.description, params[:search] %></td>
        <td><%= link_to "lÃ¶schen", product, method: :delete, data: { confirm: "Bist du sicher?"} %></td>
      </tr>
      <%end %>
    </table>
  </div>
</div>


<div class="row">
  <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
</div>


<div class="row">
